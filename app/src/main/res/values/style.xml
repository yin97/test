<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FlowersGarden" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="nextButtonTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="left_title">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#00661A</item>
    </style>

    <style name="title">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smsTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#656565</item>
    </style>

    <style name="resendTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#279342</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accessTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#656565</item>
    </style>

    <style name="userNameTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="doneTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="itemSignatureStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="productRoundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="viewPagerItemTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#30AD4A</item>
    </style>

    <style name="flowers_gar">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#00661A</item>
    </style>

    <style name="flowers_garden">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#226731</item>
    </style>

    <style name="textStyleHomeCategory">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textStyleHomeAll">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#53AB69</item>
    </style>

    <style name="categorySubTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="productTypeTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="productNameTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#232323</item>
    </style>
</resources>